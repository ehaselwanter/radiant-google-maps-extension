%h1= @google_map.name

%p= @google_map.description

%table.index#site-map
  %thead
    %tr
      %th Name
      %th Latitude
      %th Longitude
      %th.modify Modify
  %tbody
  - @google_map.markers.each do |marker|
    %tr{:class => "node level-1"}
      %td.snippet
        = image('marker', :alt => "marker-icon")
        = link_to(marker.name, edit_admin_google_map_marker_url(@google_map, marker))
      %td= marker.position.y
      %td= marker.position.x
      %td.remove= link_to(image_tag('admin/remove.png'), remove_admin_google_map_marker_url(@google_map,marker))

%p
  = link_to(image("new-marker", :alt => "New Marker"), new_admin_google_map_marker_url(@google_map))
  = link_to(image("edit-map", :alt => "Edit map"), edit_admin_google_map_url(@google_map))
  or
  = link_to("Back", admin_google_maps_url)

